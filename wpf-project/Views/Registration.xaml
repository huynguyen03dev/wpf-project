<Window x:Class="wpf_project.Views.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_project.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Registration" Height="450" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" Margin="20">
            <TextBlock Text="Create New Account" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            
            <TextBlock Text="Username:" Margin="0,10,0,5"/>
            <TextBox x:Name="txtUsername" Height="30" Padding="5"/>
            
            <TextBlock Text="Email:" Margin="0,10,0,5"/>
            <TextBox x:Name="txtEmail" Height="30" Padding="5"/>
            
            <TextBlock Text="Password:" Margin="0,10,0,5"/>
            <PasswordBox x:Name="txtPassword" Height="30" Padding="5"/>
            
            <TextBlock Text="Confirm Password:" Margin="0,10,0,5"/>
            <PasswordBox x:Name="txtConfirmPassword" Height="30" Padding="5"/>
            
            <Button x:Name="btnRegister" Content="Register" Height="40" Background="#007BFF" Foreground="White" Margin="0,20,0,10" Click="btnRegister_Click"/>
            
            <Button x:Name="btnCancel" Content="Cancel" Height="40" Background="#6C757D" Foreground="White" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
