<Window x:Class="wpf_project.Views.BookStore"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_project.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Book Store" Height="600" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Background="#007BFF" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Book Store" FontSize="22" FontWeight="Bold" Foreground="White" Margin="20,15" Grid.Column="0"/>

            <TextBlock x:Name="txtWelcome" Text="Welcome, User" FontSize="14" Foreground="White" VerticalAlignment="Center" Grid.Column="1" Margin="10,0"/>
            
            <Button x:Name="btnViewCart" Content="View Cart" Background="Transparent" Foreground="White" BorderBrush="White" Margin="10" Padding="10,5" Grid.Column="2" Click="btnViewCart_Click"/>
        </Grid>

        <!-- Main content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Filter panel -->
            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <TextBlock Text="Filters" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                
                <TextBlock Text="Genre:" Margin="0,10,0,5"/>
                <ComboBox x:Name="cmbGenre" SelectionChanged="cmbGenre_SelectionChanged"/>
                
                <TextBlock Text="Price Range:" Margin="0,20,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <TextBox x:Name="txtMinPrice" Width="80" Margin="0,0,10,0" TextChanged="PriceFilter_TextChanged"/>
                    <TextBlock Text="to" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtMaxPrice" Width="80" Margin="10,0,0,0" TextChanged="PriceFilter_TextChanged"/>
                </StackPanel>
                
                <Button x:Name="btnClearFilters" Content="Clear Filters" Margin="0,20,0,0" Click="btnClearFilters_Click"/>
                
                <Button x:Name="btnLogout" Content="Logout" Margin="0,50,0,0" Click="btnLogout_Click"/>
            </StackPanel>

            <!-- Book list -->
            <ListView x:Name="lstBooks" Grid.Column="1" MouseDoubleClick="lstBooks_MouseDoubleClick">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}" Width="200"/>
                        <GridViewColumn Header="Author" DisplayMemberBinding="{Binding Author}" Width="150"/>
                        <GridViewColumn Header="Genre" DisplayMemberBinding="{Binding Genre}" Width="100"/>
                        <GridViewColumn Header="Price" DisplayMemberBinding="{Binding Price, StringFormat=\{0:C\}}" Width="70"/>
                        <GridViewColumn Header="In Stock" DisplayMemberBinding="{Binding StockQuantity}" Width="70"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</Window>
